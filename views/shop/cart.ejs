<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <h1>Inside the cart, here only cart products will be shown</h1>
        <main>
            <% if (cartProds.length > 0) { %>
                <div class="grid">
                    <% for (let cartProduct of cartProds) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= cartProduct.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= cartProduct.imageUrl %>" alt="<%= cartProduct.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= cartProduct.price %>
                                </h2>
                                <p class="product__description">
                                    <%= cartProduct.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/product/<%=cartProduct.id %>"><button class="btn">Details</button></a>
                                
                                    <button class="btn">Proceed to Buy</button>
                                   
                            </div>
                        </article>
                        <% } %>
                </div>
                <% } else { %>
                    <h1>No Products in Cart!</h1>
                    <% } %>
        </main>
        <%- include('../includes/end.ejs') %>